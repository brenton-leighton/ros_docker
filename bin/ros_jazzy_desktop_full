#!/usr/bin/env bash

SCRIPT_PATH=$(realpath "${0}")
SCRIPT_DIR=$(dirname "${SCRIPT_PATH}")

PROJECT_DIR=$(realpath "${SCRIPT_DIR}/../jazzy/ros-jazzy-desktop-full")

# Parse options to set $BUILD_ARG
source "${SCRIPT_DIR}/_get_build_opt"

# Ensure the home directory exists on the host
mkdir -p "${PROJECT_DIR}/home/ros2_ws/src"

# Export USER_ID in case it isn't 1000
export USER_ID=$(id -u)

# Additional things for GUI
"${SCRIPT_DIR}/_check_gui_vars"
if [ ${?} -ne 0 ]; then
  exit
fi

# docker compose run
echo docker compose --file "${PROJECT_DIR}/compose.yaml" run ${BUILD_ARG} --rm default ${@}
docker compose --file "${PROJECT_DIR}/compose.yaml" run ${BUILD_ARG} --rm default ${@}
